<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="1column-full">
    <body>
        <!-- Catalog Header Block -->
        <referenceContainer name="content">
            <block class="Warbox\Category\Block\Landing" name="category.details" template="Magento_Catalog::category-details.phtml" before="-" />
            <block class="Warbox\Category\Block\Landing" name="category_seo" template="Magento_Catalog::category-seo.phtml" after="-" />
            <referenceBlock name="category.products.list">
                <block class="Warbox\Category\Block\Product" name="c-badges" template="Magento_Theme::html/blocks/c-badges.phtml"/>
            </referenceBlock>
        </referenceContainer>

        <!-- Move category details into the category block -->
        <move element="category.image" destination="category.details" before="-"/>
        <move element="page.main.title" destination="category.details" before="category.description" />
        <move element="category.description" destination="category.details" />
    </body>
</page>




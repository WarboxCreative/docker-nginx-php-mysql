                                    select.children('option').each(function () {
                                        if ($(this).prop('value')) {
                                            const attrLabel = $(this).text();
                                            const attrValue = $(this).prop('value');

                                            const attrList = $('.c-productOptions__workbench-options[data-attribute-id="' + selectId + '"] ul');

                                            if (count === 1) {
                                                attrList.empty();

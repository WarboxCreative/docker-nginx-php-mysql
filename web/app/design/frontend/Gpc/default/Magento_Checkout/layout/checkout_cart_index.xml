<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="checkout_cart_item_renderers"/>
    <body>
        <referenceBlock name="checkout.cart.summary.title">
            <arguments>
                <argument translate="true" name="text" xsi:type="string">Order Summary</argument>
                <argument name="tag" xsi:type="string">strong</argument>
                <argument name="css_class" xsi:type="string">summary title</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="checkout.cart.container">
            <block class="Magento\Framework\View\Element\Template" name="cart.mobile.link" as="mobile-link" template="Magento_Checkout::cart/mobile-link.phtml" after="cart.summary"/>
            <block class="Magento\Framework\View\Element\Template" name="cart.announcements" as="announcements" template="Magento_Checkout::cart/announcements.phtml" after="mobile-link"/>
        </referenceContainer>

        <move element="checkout.cart.form" destination="checkout.cart.container" before="cart.summary"/>
        <move element="checkout.cart.coupon" destination="cart.summary" before="checkout.cart.totals.container"/>

        <referenceBlock name="page.main.title" remove="true"/>
    </body>
</page>
